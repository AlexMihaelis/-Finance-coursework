<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Finance.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Finance"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="#388C45"
    Shell.TabBarBackgroundColor="#388C45"
    Shell.TabBarTitleColor="#3E3D3D"
    Shell.TabBarUnselectedColor="#E6E6E6">


    <TabBar Title="Finance">
        <ShellContent Title="Расходы"
                      Icon="usdcircle.png"
                ContentTemplate="{DataTemplate local:View.ExpensesPage}"/>
        <ShellContent Title="Доходы"
                      Icon="piggybank.png"
                ContentTemplate="{DataTemplate local:View.IncomePage}"/>
    </TabBar>

</Shell>
